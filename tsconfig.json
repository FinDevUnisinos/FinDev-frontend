{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "constants/*": ["src/constants/*"],
      "screens/*": ["src/ui/screens/*"],
      "app_redux/*": ["src/redux/*"],
      "config/*":  ["src/config/*"],
      "service/*":  ["src/service/*"],
      "components/*":  ["src/ui/components/*"],
      "assets/*":  ["src/assets/*"],
    }
  },
  "include": [
    "./src/**/*"
  ],
}
